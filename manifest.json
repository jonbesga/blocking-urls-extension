{
    "manifest_version": 2,
    "name": "URL Self-blocker",
    "description": "Block all the pages you dont want to visit but you can't control yourself",
    "version": "1.0",
    "author": "Jon Besga",
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },  
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_popup": "popup.html"
    },
    "incognito": "split"
}